  <h1 id="admin">Brisanje pitanja i testova i update index-a</h1>

  <br>
  <h2>Brisanje</h2>
  <form action="/admin1/delete" method="POST">
  <table>
    <% if (pite.length > 0) { %>
      <% pite.forEach(pt => { %>
        <tr>
          <td style='border: 2px solid rgb(138, 88, 88)'><%= pt.g_id %>. <%= pt.tip %></td>
          <td><%= pt.obrazovni_profil %>, <%= pt.razred %>, <%= pt.predmet %></td>
          <td><%= pt.oblast %></td>
          <th>
            <input
              type="checkbox"
              id="<%= pt.g_id %>"
              name="delete"
              value="<%= pt.g_id %>"
            >
            <label
              for="<%= pt.g_id %>"
              style="color: white;">
            </label>
          </th>
        </tr>
      <% }) %>
    <% } else { %>
      <p>Nema pitanja i testova u bazi podataka.</p>
    <% } %>
  </table>
  <br>
  <p>Broj upisanih redova u bazu: <%= broj_redova %></p>
  <br>
